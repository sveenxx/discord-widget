{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "module": "es6",
      "target": "es5",
      "lib": ["DOM", "ES2015"], 
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": [
      "src/**/*",
      "custom.d.ts"
    ]
}