{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["esnext", "dom", "es6"],  
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "discord-widget": [ "src/index" ],
      "discord-widget/*": [ "src/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "build", 
    "dist",
    "webpack"
  ]
}