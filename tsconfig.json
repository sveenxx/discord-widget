{
    "compilerOptions": {
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "module": "es6",
      "target": "es5",
      "lib": ["es2015", "dom"],  
      "outDir": ".",
      "baseUrl": ".",
      "paths": {
        "discord-widget": [ "src/index" ],
        "discord-widget/*": [ "src/*" ]
      }
    },
    "exclude": [
      "node_modules",
      "build", 
      "dist"
    ]
}